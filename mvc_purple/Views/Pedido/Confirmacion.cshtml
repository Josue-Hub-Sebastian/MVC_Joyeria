@model mvc_purple.DTO.Response.PedidoResponse

@{
    ViewData["Title"] = "Pedido Confirmado";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            </div>
            <h2 class="text-success">¡Pedido Realizado Exitosamente!</h2>
            <p class="lead text-muted">Tu pedido ha sido procesado y pronto recibirás tu joyería</p>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-receipt"></i> Resumen del Pedido #@Model.Id
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Cliente:</strong><br>
                        @Model.Cliente.Nombre<br>
                        @Model.Cliente.Email
                    </div>
                    <div class="col-md-6">
                        <strong>Fecha del Pedido:</strong><br>
                        @Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")<br>
                        <strong>Estado:</strong> <span class="badge bg-warning">@Model.Estado</span>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.DireccionEnvio))
                {
                    <div class="mb-3">
                        <strong>Dirección de Envío:</strong><br>
                        @Model.DireccionEnvio
                    </div>
                }

                <h6>Productos Ordenados:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unit.</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.ProductoNombre</td>
                                    <td>@detalle.Cantidad</td>
                                    <td>$@detalle.PrecioUnitario.ToString("N2")</td>
                                    <td>$@detalle.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th colspan="3">Total:</th>
                                <th>$@Model.Total.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div class="mt-3">
                        <strong>Observaciones:</strong><br>
                        @Model.Observaciones
                    </div>
                }
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body text-center">
                <h6><i class="bi bi-info-circle"></i> ¿Qué sigue?</h6>
                <p class="mb-3">
                    Procesaremos tu pedido en las próximas 24 horas y te contactaremos para coordinar la entrega.
                    El tiempo estimado de entrega es de 3-5 días hábiles.
                </p>
                <div class="btn-group">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Volver al Inicio
                    </a>
                    <a asp-controller="Cliente" asp-action="MisPedidos" class="btn btn-outline-primary">
                        <i class="bi bi-clock-history"></i> Ver Mis Pedidos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>