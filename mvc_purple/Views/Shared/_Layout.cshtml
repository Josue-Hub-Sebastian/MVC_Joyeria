<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc_purple</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f0eef5;
        }

        .navbar-custom {
            background-color: #e6ddf5 !important;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #2b2b2b !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #6f42c1 !important;
                }

        footer {
            background-color: #f0eef5;
            color: #6c648b;
        }

    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm border-bottom">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-stars text-primary me-1"></i> PurpleSky
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i> Inicio
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.HasClaim("EsAdmin", "True"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Pedidos">
                                        <i class="bi bi-journal-check me-1"></i> Pedidos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Productos">
                                        <i class="bi bi-box-seam me-1"></i> Productos
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="MisPedidos">
                                        <i class="bi bi-clock-history me-1"></i> Mis Pedidos
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @if (!User.HasClaim("EsAdmin", "True"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Carrito">
                                    <i class="bi bi-basket me-1"></i> Carrito
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (!User.HasClaim("EsAdmin", "True"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="Perfil">Mi Perfil</a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Cliente" asp-action="Logout">Cerrar Sesión</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cliente" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cliente" asp-action="Registro">
                                    <i class="bi bi-person-plus me-1"></i> Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-1"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle me-1"></i> @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center py-3 small">
        <div class="container">
            &copy; 2025 - <strong>PurpleSky</strong> | <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">Inicio</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
