@model List<mvc_purple.Models.ItemCarrito>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="bi bi-cart3"></i> Mi Carrito de Compras
        </h2>
        <hr />
    </div>
</div>

@if (Model?.Any() == true)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Productos en tu carrito</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="row align-items-center border-bottom py-3">
                            <div class="col-md-6">
                                <h6 class="mb-1">@item.NombreProducto</h6>
                                <small class="text-muted">Precio unitario: $@item.Precio.ToString("N2")</small>
                            </div>
                            <div class="col-md-2 text-center">
                                <span class="badge bg-primary fs-6">@item.Cantidad</span>
                            </div>
                            <div class="col-md-2 text-center">
                                <strong>$@item.Subtotal.ToString("N2")</strong>
                            </div>
                            <div class="col-md-2 text-center">
                                <form asp-action="EliminarDelCarrito" method="post" class="d-inline">
                                    <input type="hidden" name="productoId" value="@item.ProductoId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('¿Eliminar este producto del carrito?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Resumen del Pedido</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal:</span>
                        <strong>$@Model.Sum(i => i.Subtotal).ToString("N2")</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Envío:</span>
                        <span>Gratis</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <h5>Total:</h5>
                        <h5 class="text-primary">$@Model.Sum(i => i.Subtotal).ToString("N2")</h5>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Pedido" asp-action="Checkout" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-credit-card"></i> Proceder al Pago
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Cliente" asp-action="Login" class="btn btn-warning w-100 mb-2">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión para Comprar
                        </a>
                    }

                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left"></i> Seguir Comprando
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <div class="mb-4">
                    <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                </div>
                <h3>Tu carrito está vacío</h3>
                <p class="text-muted">¡Agrega algunos productos para comenzar!</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-bag"></i> Ver Productos
                </a>
            </div>
        </div>
    </div>
}